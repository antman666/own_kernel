  "https://cdn.kernel.org/pub/linux/kernel/v6.x/linux-$pkgver.tar".{xz,sign}
  config         # the main kernel config file
  open_O3.patch
  "more-uarches-$_gcc_more_v.tar.gz::https://github.com/graysky2/kernel_compiler_patch/archive/$_gcc_more_v.tar.gz"
  # "${_patchsources}/futex-patches/0001-futex-6.2-Add-entry-point-for-FUTEX_WAIT_MULTIPLE-op.patch"
  "${_patchsource}/sched/0001-tt.patch"
  # "${_patchsource}/misc/0001-Introduce-per-VMA-lock.patch"
  # "${_patchsource}/misc/0002-sched-Introduce-classes-of-tasks-for-load-balance.patch"
  "${_patchsource}/misc/0001-lrng.patch"
  "${_patchsource}/0001-bbr2.patch"
  "${_patchsource}/0002-bfq.patch"
  # "${_patchsource}/0003-bitmap.patch"
  # "${_patchsource}/0005-clr.patch"
  "${_patchsource}/0004-fixes.patch"
  "${_patchsource}/0005-fs-patches.patch"
  "${_patchsource}/0007-ksm.patch"
  # "${_patchsource}/0010-maple-lru.patch"
  "${_patchsource}/0008-Per-VMA-locks.patch"
  "${_patchsource}/0009-sched.patch"
  "${_xanmodpatch}/intel/0020-drivers-initialize-ata-before-graphics.patch"
  # "${_xanmodpatch}/intel/0021-init-wait-for-partition-and-retry-scan.patch"
  "${_xanmodpatch}/net/tcp/0001-tcp-Add-a-sysctl-to-skip-tcp-collapse-processing-whe.patch"
  "${_xanmodpatch}/xanmod/0001-XANMOD-x86-build-Add-more-x86_64-optimizations.patch"
  "${_xanmodpatch}/xanmod/0007-XANMOD-block-set-rq_affinity-to-force-full-multithre.patch"
  "${_xanmodpatch}/xanmod/0014-XANMOD-Makefile-Disable-GCC-vectorization-on-trees.patch"
  "${_xanmodpatch}/xanmod/0015-XANMOD-scripts-setlocalversion-remove-tag-for-git-re.patch"
)

