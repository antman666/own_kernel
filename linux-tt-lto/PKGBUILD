  "${_patchsource}/0013-maple-lru.patch"
  "${_xanmodpatch}/clearlinux/0004-drivers-initialize-ata-before-graphics.patch"
  "${_xanmodpatch}/clearlinux/0005-init-wait-for-partition-and-retry-scan.patch"
  "${_xanmodpatch}/net/ipv4/0001-Add-a-sysctl-to-skip-tcp-collapse-processing-when-th.patch"
  "${_xanmodpatch}/xanmod/0001-XANMOD-x86-build-Add-more-x86_64-optimizations.patch"
  # "${_xanmodpatch}/xanmod/0002-XANMOD-fair-Remove-all-energy-efficiency-functions.patch"
  # "${_xanmodpatch}/xanmod/0003-XANMOD-sched-core-Add-yield_type-sysctl-to-reduce-or.patch"
