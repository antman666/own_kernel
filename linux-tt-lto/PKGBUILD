  "${_xanmodpatch}/xanmod/0007-XANMOD-block-set-rq_affinity-to-force-full-multithre.patch"
  # "${_xanmodpatch}/xanmod/0009-XANMOD-dcache-cache_pressure-50-decreases-the-rate-a.patch"
  # "${_xanmodpatch}/xanmod/0011-XANMOD-sched-autogroup-Add-kernel-parameter-and-conf.patch"
  "${_xanmodpatch}/xanmod/0014-XANMOD-Makefile-Disable-GCC-vectorization-on-trees.patch"
  "${_xanmodpatch}/xanmod/0015-XANMOD-scripts-setlocalversion-remove-tag-for-git-re.patch"
)

